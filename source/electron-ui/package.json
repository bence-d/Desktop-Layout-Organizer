{
  "name": "my-electron-app",
  "version": "1.0.0",
  "description": "Hello World!",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "buildlib": "cd assets/dev-libs && pip uninstall dataHandlers -y && pip install .",
    "dist:win": "npm run buildlib && electron-builder --win"
  },
  "author": "Bence",
  "license": "ISC",
  "devDependencies": {
    "electron": "^24.1.2",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.dloteam.dlo",
    "productName": "Desktop Layout Organizer",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
