{
  "name": "my-electron-app",
  "version": "1.0.0",
  "description": "Hello World!",
  "main": "main.js",
  "scripts": {
    "start": "set NODE_ENV=development && electron .",
    "buildapi": "cd assets/api-server && pyinstaller --onefile --noconsole --uac-admin .\\dhapi.py && pyinstaller --onefile --noconsole --uac-admin .\\terminate_api.py",
    "buildlib": "cd assets/dev-libs && pip uninstall dataHandlers -y && pip install .",
    "dist:win": "npm run buildlib && npm run buildapi && electron-builder --win"
  },
  "author": "Bence",
  "license": "ISC",
  "devDependencies": {
    "electron": "^24.1.2",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.dloteam.dlo",
    "productName": "Desktop Layout Organizer",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "extraResources": [
      {
        "from": "./assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asar": true,
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
